<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SomethingToDoApp.TaskAddPage"
             BackgroundColor="#05010A"
             Title="Add Task">

    <ScrollView>
        <FlexLayout Direction="Column">

            <VerticalStackLayout Padding="25" Spacing="35">

                <!-- Header -->
                <VerticalStackLayout Spacing="6" Margin="0,40,0,0">
                    <Label Text="ADD NEW TASK"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="#F200FF"
                           HorizontalTextAlignment="Center"
                           CharacterSpacing="2"/>

                    <BoxView HeightRequest="3"
                             WidthRequest="160"
                             HorizontalOptions="Center"
                             Color="#00F0FF"
                             Opacity="0.9"
                             CornerRadius="2"/>
                </VerticalStackLayout>

                <!-- Neon Panel -->
                <Frame Padding="25"
                       CornerRadius="18"
                       BackgroundColor="#0D0017"
                       HasShadow="True"
                       BorderColor="#F200FF"
                       Opacity="0.95">

                    <VerticalStackLayout Spacing="20">

                        <Entry x:Name="AddTaskNameField"
                               Placeholder="Task Name"
                               TextColor="#00F0FF"
                               PlaceholderColor="#7A7A7A"
                               BackgroundColor="#0A0012"
                               HeightRequest="50"
                              />

                        <Entry x:Name="AddTaskDescriptionField"
                               Placeholder="Task Description"
                               TextColor="#00F0FF"
                               PlaceholderColor="#7A7A7A"
                               BackgroundColor="#0A0012"
                               HeightRequest="50"
                               />

                        <!-- Buttons -->
                        <Button x:Name="SaveButton"
                                Text="ðŸ’¾ SAVE TASK"
                                Clicked="AddButton_Clicked"
                                BackgroundColor="#00F0FF"
                                TextColor="#05010A"
                                CornerRadius="14"
                                FontSize="18"
                                HeightRequest="55"/>

                        <Button x:Name="ViewAllTasksButton"
                                Text="ðŸ“‹ VIEW ALL TASKS"
                                Clicked="ViewAllTasksButton_Clicked"
                                BackgroundColor="#F200FF"
                                TextColor="White"
                                CornerRadius="14"
                                FontSize="18"
                                HeightRequest="55"/>

                    </VerticalStackLayout>
                </Frame>

                <!-- Task List -->
                <CollectionView
                    x:Name="listView"
                    FlexLayout.Grow="1"
                    IsVisible="False"
                    SelectionMode="Single"
                    SelectionChanged="CollectionView_SlectionChanged">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15"
                                   Margin="0,10"
                                   CornerRadius="14"
                                   BackgroundColor="#0D0017"
                                   BorderColor="#00F0FF"
                                   HasShadow="True">

                                <VerticalStackLayout Spacing="5">
                                    <Label Text="{Binding TaskName}"
                                           FontSize="18"
                                           TextColor="#00F0FF"/>

                                    <Label Text="{Binding TaskDescription}"
                                           FontSize="14"
                                           TextColor="#CFCFCF"/>
                                </VerticalStackLayout>

                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>

                <Button x:Name="GenerateRandomTasks"
                        Text="âœ¨ GENERATE RANDOM TASKS"
                        Clicked="GenerateRandomTasks_Clicked"
                        IsVisible="False"
                        BackgroundColor="#00F0FF"
                        TextColor="#05010A"
                        CornerRadius="14"
                        FontSize="18"
                        HeightRequest="55"/>

            </VerticalStackLayout>

        </FlexLayout>
    </ScrollView>
</ContentPage>
